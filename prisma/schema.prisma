generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite3"
}

// User can be admin or client and will let interact with the app
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  role      String  @default("client")
}

// Products that includes the ammount and time limiters (business logic)
model Product {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  imageUrl    String?
  price     Int
  stock     Int @default(0)
  ammountLimit Int @default(0) @map("ammount_limit")
  timeRangeLimit Int @default(0) @map("time_range_limit")
}

model Invoice {
  id        String   @id @default(uuid())
  date      DateTime @default(now()) @map("date")
  clientId  String   @map("client_id")
  products  Json      // [{productId: String, ammount: Int}]
}